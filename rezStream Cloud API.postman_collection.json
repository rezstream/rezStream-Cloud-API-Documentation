	"event": [
		{
			"listen": "prerequest",
			"script": {
				"type": "text/javascript",
				"requests": {},
				"exec": [
					"const moment = require('moment');\r",
					"const now = moment();\r",
					"const tenDaysLayter = now.clone().add(10, 'days');\r",
					"\r",
					"pm.collectionVariables.set(\"now\", now.toISOString());\r",
					"pm.collectionVariables.set(\"today\", now.format('YYYY-MM-DD'));\r",
					"pm.collectionVariables.set(\"todayPlusTen\", tenDaysLayter.format('YYYY-MM-DD'));"
				]
			}
		},

							""
						]
					}
				},
				{
					"listen": "test",
					"script": {
						"type": "text/javascript",
						"packages": {},
						"requests": {},
						"exec": [
							"const currentReservationId = pm.variables.get(\"reservation_id\");\r",
							"if (currentReservationId == null || currentReservationId === \"\") {\r",
							"    const responseData = pm.response.json();\r",
							"    const recentReservationId = responseData?.[0]?.id;\r",
							"    if (recentReservationId != null) {\r",
							"        pm.collectionVariables.set(\"reservation_id\", recentReservationId);\r",
							"    }\r",
							"}"
						]
					}
				}
			]

		{
			"name": "reservations",
			"item": [
				{
					"name": "Reservations by Updated",
					"event": [
						{
							"listen": "prerequest",
							"script": {
								"exec": [
									"const moment = require('moment');\r",
									"const earlyToday = new Date(new Date().setHours(0, 0, 0, 0));\r",
									"pm.variables.set(\"resupdated-from\", moment(earlyToday).toISOString());"
								],
								"type": "text/javascript",
								"packages": {},
								"requests": {}
							}
						},
						{
							"listen": "test",
							"script": {
								"exec": [
									""
								],
								"type": "text/javascript",
								"packages": {},
								"requests": {}
							}
						}
					],
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{rezcloudapi_url}}/reservations/updated?limit=10&from={{resupdated-from}}",
							"host": [
